<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.com.webbrowser.WebBrowserController">

    <top>
        <HBox fx:id="tabContainer" spacing="5" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>
            <!-- Tabs sẽ được thêm động bằng code -->
        </HBox>
    </top>

    <center>
        <VBox fx:id="contentArea" alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>
            <children>
                <Label fx:id="newTabTitle" style="-fx-font-size: 48px; -fx-font-weight: bold;" text="New Tab" />
                <GridPane fx:id="shortcutsGrid" alignment="CENTER" hgap="20" vgap="20">
                    <!-- Shortcuts sẽ được thêm động bằng code -->
                </GridPane>
            </children>
        </VBox>
    </center>
   <bottom>
        <HBox fx:id="navigationBar" spacing="5" style="-fx-background-color: #e0e0e0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>
            <children>
                <Button fx:id="backButton" text="←" />
                <Button fx:id="forwardButton" text="→" />
                <Button fx:id="refreshButton" text="⟳" />
                <TextField fx:id="urlField" prefWidth="600" text="https://www.google.com" />
                <Button fx:id="goButton" text="Go" />
            </children>
        </HBox>
   </bottom>

</BorderPane>
