<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.com.webbrowser.controller.WebBrowserTcpController">

    <top>
        <ToolBar>
            <Button fx:id="backButton" text="⟵"/>
            <Button fx:id="forwardButton" text="⟶"/>
            <TextField fx:id="urlField" promptText="Enter URL..." HBox.hgrow="ALWAYS"/>
            <Button fx:id="goButton" text="Go"/>
            <Button fx:id="addTabButton" text="+"/>
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS"/>
    </center>
</BorderPane>
